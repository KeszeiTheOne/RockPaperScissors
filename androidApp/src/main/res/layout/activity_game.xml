<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="game.androidApp.GameActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" android:src="@drawable/rock"
            android:id="@+id/computerCooseImg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp" android:layout_marginEnd="148dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" android:src="@drawable/rock" android:id="@+id/userChooseImg"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/computerCooseImg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp" android:layout_marginEnd="148dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="KŐ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rock"
            app:layout_constraintEnd_toStartOf="@+id/paper" android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="33dp"/>
    <Button
            android:text="Papír"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/paper"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/rock" app:layout_constraintEnd_toStartOf="@+id/scissors"
            android:layout_marginEnd="41dp"/>
    <Button
            android:text="OLLÓ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scissors"
            android:layout_marginStart="40dp" app:layout_constraintStart_toEndOf="@+id/paper"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:layout_marginEnd="34dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>